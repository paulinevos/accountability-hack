{% extends 'base.html.twig' %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('node_modules/bootstrap/dist/css/bootstrap.css') }}">
    <link rel="stylesheet" href="{{ asset('css/bootstrap.min.css') }}">
{% endblock %}

{% block heading %}
    <nav class="nav navbar-default">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar"
                        aria-expanded="false" aria-controls="navbar">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="#">StemmingSearch</a>
            </div>
            {#<div id="navbar" class="collapse navbar-collapse">#}
            {#<ul class="nav navbar-nav">#}
            {#<li class="active"><a href="#">Home</a></li>#}
            {#<li><a href="#about">About</a></li>#}
            {#<li><a href="#contact">Contact</a></li>#}
            {#</ul>#}
            {#</div><!--/.nav-collapse -->#}
        </div>
    </nav>
{% endblock %}

{% block content %}
    <div class="container" style="margin-top:30px;" id="main">
        <div class="jumbotron">
            <h2>Zoek op onderwerp:</h2>
            <form class="form search-form" method="post">
                <input name="query" type="text" />
                <button class="btn btn-default">Zoek</button>
            </form>
        </div>
    </div>
{% endblock %}

{% block filter %}
                <input type="radio" id="motie-ingetrokken" name=“filter[result]” value="motie-ingetrokken"
                       class="cb-hidden">
                <label class="btn btn-default" for="motie-ingetrokken">Motie ingetrokken</label>

                <input type="radio" id="toezegging-gedaan" name=“filter[result]” value="toezegging-gedaan"
                       class="cb-hidden">
                <label class="btn btn-default" for="toezegging-gedaan">Toezegging gedaan</label>

                <input type="radio" id="motie-in-en-over" name=“filter[result]” value="motie-ingetrokken-en-overgenomen"
                       class="cb-hidden">
                <label class="btn btn-default" for="motie-in-en-over">Motie ingetrokken en overgenomen</label>

                <input type="radio" id="motie-aangenomen" name=“filter[result]” value="motie-aangenomen"
                       class="cb-hidden">
                <label class="btn btn-default" for="motie-aangenomen">Motie aangenomen</label>
            </div>
        </div>
{% endblock %}

{% block results %}
{% if results is defined and results|length > 0 %}
    <ul class="list-group">
        {% for result in results %}
            <li class="list-group-item">{{ dump(result) }}</li>
        {% endfor %}
    </ul>
{% endif %}
{% endblock %}

{% block javascripts %}
    <script src="{{ asset('node_modules/jquery/dist/jquery.min.js') }}" type="application/javascript"></script>
    <script src="{{ asset('node_modules/bootstrap/dist/js/bootstrap.js') }}" type="application/javascript"></script>
{% endblock %}